{
  "name": "fireblog",
  "version": "1.0.0",
  "description": "Firebase blog",
  "main": "app.js",
  "scripts": {
    "start": "npm run serve",
    "serve": "npm run serve:dev",
    "serve:prod": "webpack-dev-server --config config/webpack.prod.js --progress --colors --display-error-details",
    "serve:dev": "webpack-dev-server --config config/webpack.dev.js --progress --colors --display-error-details --display-cached --inline --open",
    "build": "rimraf dist && webpack --config config/webpack.prod.js --progress --colors --display-error-details",
    "postinstall": "typings install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxcache/fireblog.git"
  },
  "keywords": [
    "firebase",
    "blog"
  ],
  "author": "Vikram",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/maxcache/fireblog/issues"
  },
  "homepage": "https://github.com/maxcache/fireblog#readme",
  "dependencies": {
    "@angular/common": "^2.0.0",
    "@angular/compiler": "^2.0.0",
    "@angular/core": "^2.0.0",
    "@angular/forms": "^2.0.0",
    "@angular/http": "^2.0.0",
    "@angular/platform-browser": "^2.0.0",
    "@angular/platform-browser-dynamic": "^2.0.0",
    "@angular/router": "^3.0.0",
    "core-js": "^2.4.1",
    "rxjs": "5.0.0-beta.12",
    "zone.js": "^0.6.25"
  },
  "devDependencies": {
    "angular2-template-loader": "^0.5.0",
    "awesome-typescript-loader": "^2.2.4",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "raw-loader": "^0.5.1",  
    "rimraf": "^2.5.4",
    "typescript": "^2.0.3",
    "html-webpack-plugin": "^2.22.0",
    "typings": "^1.4.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1",
    "webpack-merge": "^0.14.1"
  }
}